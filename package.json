{
  "name": "topbar",
  "files": [
    "topbar.js",
    "topbar.min.js",
    "*.d.ts",
    "dist"
  ],
  "version": "3.0.1",
  "description": "Tiny & beautiful site-wide progress indicator",
  "homepage": "http://buunguyen.github.io/topbar",
  "repository": {
    "type": "git",
    "url": "git@github.com:buunguyen/topbar.git"
  },
  "scripts": {
    "dev": "rollup -w -c ./rollup.config.mjs",
    "build": "NODE_ENV=production rollup -c ./rollup.config.mjs"
  },
  "keywords": [
    "progress",
    "indicator",
    "loading",
    "responsive",
    "loading"
  ],
  "license": "MIT",
  "author": {
    "name": "Buu Nguyen"
  },
  "main": "topbar.min.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "types": {
    "index.d.ts": "./dist/index.d.ts"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "rollup": "^4.24.3",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3"
  }
}
